<html xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
<head>
	<script src="/bower_components/jquery/dist/jquery.min.js"></script>

	<style>

	html, body {
		margin: 0;
		padding: 0;
	}

	body {
		font-family: 'Segoe UI', 'Helvetica Neue', Helvetica, Arial, sans-serif;
		color: #333;
		-webkit-tap-highlight-color: rgba(0,0,0,0);
		-webkit-touch-callout: none;
	}

	#stored ul li form {
		display: inline;
	}

	</style>

	<title>Octopus</title>

</head>
<body>
	<section id="header">
		<h1>Octopus</h1>
	</section>
	<section id="current">
		<form action="/sketch/create" method="post">
		<button type="submit">New Sketch</button>
		</form>
	</section>
	<section id="running">
		<h2>Running Experiments</h2>
		<ul>
			<li t:render="running_experiment">
				<a><t:attr name="href"><t:slot name="url" /></t:attr><t:slot name="title" /></a>
			</li>
		</ul>
	</section>
	<section id="stored">
		<h2>Saved Sketches</h2>
		<ul>
			<li t:render="saved_sketch">
				<a><t:attr name="href"><t:slot name="url" /></t:attr><t:slot name="title" /></a>
				<form method="post">
					<t:attr name="action"><t:slot name="delete_url" /></t:attr>
					<button type="submit">Delete</button>
				</form>
				<form method="post">
					<t:attr name="action"><t:slot name="copy_url" /></t:attr>
					<button type="submit">Duplicate</button>
				</form>
			</li>
		</ul>
	</section>
	<section id="past">
		<h2>Completed Experiments</h2>
		<ul>
			<li t:render="past_experiment">
				<a><t:attr name="href"><t:slot name="url" /></t:attr><t:slot name="title" /></a>
			</li>
		</ul>
	</section>
</body>
</html>
